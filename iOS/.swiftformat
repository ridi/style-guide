--exclude Pods,Carthage,**/*.generated.swift
--disable consecutiveSpaces,indent,isEmpty,redundantParens,strongOutlets,trailingClosures

--allman false
--binarygrouping ignore
--closingparen balanced
--commas false
--comments indent
--decimalgrouping ignore
--elseposition same-line
--empty void
--header ignore
--hexgrouping ignore
--hexliteralcase lowercase
--ifdef indent
--importgrouping alphabetized
--indent 4
--indentcase false
--linebreaks lf
--maxwidth 120
--octalgrouping ignore
--operatorfunc spaced
--patternlet hoist
--ranges no-space
--semicolons never
--self remove
--selfrequired true
--stripunusedargs closure-only
--trailingclosures true
--trimwhitespace nonblank-lines
--wraparguments before-first
--wrapcollections before-first
--closingparen balanced
